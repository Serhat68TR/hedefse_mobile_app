<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header LinearLayout -->
    <LinearLayout
        android:id="@+id/taskDet_linear_taskHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/taskDet_tv_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GÖREVLERİM"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/taskDet_linear_taskHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="4dp"
                android:background="#F5FAFA">


            <TextView
                android:id="@+id/taskDet_tv_taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Görev Başlığı"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/taskDet_et_taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Task Title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/taskDet_tv_taskDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Description" />

            <EditText
                android:id="@+id/taskDet_et_taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Task Description"
                android:visibility="gone" />

            <TextView
                android:id="@+id/taskDet_tv_creationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/taskDet_tv_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Başlangıç Tarihi"
                android:textAlignment="textStart"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/taskDet_et_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Başlangıç Tarihi"
                android:visibility="gone" />

            <TextView
                android:id="@+id/taskDet_tv_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="4dp"
                android:text="Bitiş Tarihi"
                android:textAlignment="textStart"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/taskDet_et_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bitiş Tarihi"
                android:visibility="gone" />
        </LinearLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/taskDet_btn_edit"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="#60AEE6"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            android:text="Düzenle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/taskDet_btn_save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kaydet"
            app:backgroundTint="#43AB46"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/taskDet_btn_delete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:backgroundTint="#DE4E43"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            android:text="Görevi Sil" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/taskDet_btn_notDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bildirim Sil"
            app:backgroundTint="#FF0000"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            android:layout_marginTop="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskDet_rv_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
