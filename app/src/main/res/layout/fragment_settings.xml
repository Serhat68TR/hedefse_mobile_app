<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header LinearLayout -->
    <LinearLayout
        android:id="@+id/settings_linear_settingsHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#76B7EB"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/settings_rv_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/settings_tv_settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AYARLAR"
            android:textAlignment="center"
            android:textSize="18dp" />

    </LinearLayout>

    <!-- Settings RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settings_rv_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_linear_settingsHeader" />
</androidx.constraintlayout.widget.ConstraintLayout>
